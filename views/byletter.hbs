
{{#if hasResult}}
<h2>Letter {{letter}}</h2>
<br>
<div class="list-group">
	{{#each byletter}}
		<a class="list-group-item list-group-item-action" href="/book/{{this.book_id}}">
			{{ this.title }}
		</a>
	{{/each}}
</div>
<br>
<!-- navigation buttons-->

<div class="container">
  <div class="row">
