        <form method="GET" action="/">
            <button type="submit" class = "btn btn-success">Home</button>
        </form>
    </div>
    <div class="col">
        {{#if notstartofpage}}
            <form method="GET" action="/byletter">
                <input type="hidden" name="letter" value="{{ letter }}">
